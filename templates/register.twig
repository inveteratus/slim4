{% extends 'layouts/guest.twig' %}
{% import "macros/form.twig" as input %}

{% block content %}

    <main class="flex flex-col space-y-2 flex-grow items-center justify-center">
        <form action="{{ url_for('register') }}" method="post" class="bg-slate-100 p-8 flex flex-col space-y-4 max-w-sm w-full shadow rounded-lg">
            {{ input.text('Name', 'name', form.name, errors.name, 'autofocus autocomplete="name" required') }}
            {{ input.email('Email', 'email', form.email, errors.email, 'autocomplete="email" required') }}
            {{ input.password('Password', 'password', errors.password, 'autocomplete="new-password" required') }}
            <div class="pt-2">
                {{ input.submit("Register") }}
            </div>
            {% include "partials/csrf.twig" %}
        </form>
        <p class="text-center text-sm"><a href="{{ url_for('login') }}" class="text-slate-600 hover:underline focus:underline focus:outline-none">Already have an account ?</a></p>
    </main>

{% endblock %}
