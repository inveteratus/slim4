{% extends 'layouts/guest.twig' %}

{% block content %}

    <main class="flex flex-col space-y-2 flex-grow items-center justify-center">
        <form action="{{ url_for('register') }}" method="post" class="bg-slate-100 p-8 flex flex-col space-y-4 max-w-sm w-full shadow">

            <div class="flex flex-col space-y-0.5">
                <label for="name" class="text-sm text-slate-600">Name</label>
                <input id="name" type="text" name="name" value="{{ form.name }}" required autofocus autocomplete="name" />
                {% if errors.name %}
                    <span class="text-sm text-red-500">{{ errors.name }}</span>
                {% endif %}
            </div>

            <div class="flex flex-col space-y-0.5">
                <label for="email" class="text-sm text-slate-600">Email</label>
                <input id="email" type="email" name="email" value="{{ form.email }}" required autocomplete="email" />
                {% if errors.email %}
                    <span class="text-sm text-red-500">{{ errors.email }}</span>
                {% endif %}
            </div>

            <div class="flex flex-col space-y-0.5">
                <label for="password" class="text-sm text-slate-600">Password</label>
                <input id="password" type="password" name="password" required autocomplete="new-password" />
                {% if errors.password %}
                    <span class="text-sm text-red-500">{{ errors.password }}</span>
                {% endif %}
            </div>

            <div>
                <button type="submit" class="bg-blue-500 text-sm text-white px-3 py-2">Register</button>
            </div>

        </form>
        <p class="text-center"><a href="{{ url_for('login') }}">Already have an account ?</a></p>
    </main>

{% endblock %}
